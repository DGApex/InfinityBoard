{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "infinite-board",
        "version": "0.2.1"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "all": true,
                "save": true,
                "open": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$HOME/**",
                    "$DESKTOP/**",
                    "$DOWNLOADS/**",
                    "C:\\Users\\**"
                ]
            },
            "protocol": {
                "all": true,
                "asset": true,
                "assetScope": [
                    "**"
                ]
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "targets": [
                "msi",
                "nsis"
            ],
            "identifier": "com.infinite-board.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "InfiniteBoard",
                "width": 1200,
                "height": 800,
                "fileDropEnabled": true
            }
        ]
    }
}